{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake Configure (VS2022)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S",
				".",
				"-B",
				"build",
				"-G",
				"Visual Studio 17 2022"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "CMake Build (Release)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Release"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}